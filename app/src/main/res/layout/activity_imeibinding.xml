<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="PhoneNum"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/PhoneNum_Binding"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_bg"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMEI"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/IMEI_Binding"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/IMEI_Binding"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ems="10"
        android:background="@drawable/edit_bg"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNum_Binding"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/btn_Binding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Binding"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toBottomOf="@+id/IMEI_Binding"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_yellow"
        app:layout_constraintHorizontal_bias="0.11" />

    <Button
        android:id="@+id/btn_checkBinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/btn_yellow"
        android:text="Check"
        app:layout_constraintTop_toBottomOf="@+id/IMEI_Binding"
        app:layout_constraintLeft_toRightOf="@+id/btn_Binding"
        android:layout_marginLeft="137dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_deleteBinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/btn_yellow"
        android:text="Delete"
        app:layout_constraintLeft_toRightOf="@+id/btn_Binding"
        app:layout_constraintTop_toBottomOf="@+id/IMEI_Binding"
        app:layout_constraintRight_toLeftOf="@+id/btn_checkBinding"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>